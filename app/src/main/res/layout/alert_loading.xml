<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="265dp"
    android:layout_height="215dp"
    android:orientation="vertical"    
    android:background="@drawable/alert_bg" >
    <LinearLayout
        android:id="@+id/id_alert_bar"        
	    android:layout_width="match_parent"
	    android:layout_height="55dp"
	    android:orientation="horizontal" >
	    <ImageView
		    android:layout_width="25dp"
		    android:layout_height="27dp"
		    android:layout_marginTop="16dp"
		    android:layout_marginLeft="16dp"
		    android:background="@drawable/alerta" />
	    <TextView
	          android:id="@+id/id_alert_titulo"
		    android:layout_width="wrap_content"
		    android:layout_height="27dp"
		    android:layout_marginTop="16dp"
		     android:layout_marginLeft="10dp"
		    android:textSize="19sp"
		    android:gravity="center"
		    android:textColor="#0c465e"
		    android:text = "PROCESANDO"/>
    </LinearLayout>
    <View 
        android:layout_width="match_parent"
	    android:layout_height="1px"
	    android:layout_below="@+id/id_alert_bar"
	    android:background="#d5d5d5"/>
   
     <ImageView
       android:id="@+id/id_loading_alert"
	    android:layout_width="80dp"
	    android:layout_height="35dp"
	    android:layout_centerInParent="true"
		android:background="@drawable/loading"
		android:visibility = "visible">    
	</ImageView> 
    
    

</RelativeLayout>
