<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2" >
    
    <ScrollView 
        android:id="@+id/id_progreso_scroll"
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:scrollbarThumbVertical="@drawable/scrollbar">         
            
        <LinearLayout 
            android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:orientation="vertical">   
    			   <ImageView
		    	    android:id="@+id/id_progreso_mapa"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"	
			        android:scaleType="fitXY"
			        android:src="@drawable/mapa"/>            
          
            
        </LinearLayout>        
        
    </ScrollView>
    	<LinearLayout   
    	    android:layout_width="75dp"
	        android:layout_height="27dp"
	         android:layout_alignParentTop="true"
	        android:layout_alignParentRight="true"
	         android:background="@drawable/puntos_bg"
	         android:orientation="horizontal"
      	     android:layout_marginRight="16dp" 
       	     android:layout_marginTop="16dp"	    	             
	         android:gravity="center">
	     <TextView
	         android:id="@+id/id_progreso_puntos_texto"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="18sp"
   	        android:textColor="#aba1a0"	        
	        android:text="000"/>
	      <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="10sp"	 
	        android:layout_marginTop="1dp"   
	        android:layout_marginLeft="5dp"   
   	        android:textColor="#b0aaaa"	        
	        android:text="PTS"/>
	     
	    </LinearLayout>   
	     
        <LinearLayout
		    android:layout_width="57dp"
		    android:layout_height="25dp"
    	    android:id="@+id/id_progreso_atras"	
    	    android:gravity="center"    
    	     android:layout_marginTop="16dp"	    	    
		    android:orientation="horizontal">
	    	 <ImageView
		        android:layout_width="wrap_content"
		        android:layout_height="19dp"
		        android:src="@drawable/hamburguesa"/>
    	 </LinearLayout>
	  <RelativeLayout 
	       android:id="@+id/id_progreso_regalo_rl"
            android:layout_width="70dp"
    		android:layout_height="40dp"
    		android:layout_alignParentBottom="true"
    		android:layout_alignParentRight="true"
    		android:layout_marginBottom="25dp"
    		android:layout_marginRight="25dp"
    		android:gravity="center_vertical"    		
    		android:background="@drawable/regalos">
             
	             <TextView
	                 android:id="@+id/id_progreso_regalo"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:textSize="18sp"
			        android:layout_marginLeft="15dp"
			         android:textColor="#b8acac"
			        android:text="8"/>
    	</RelativeLayout>    
       <RelativeLayout 
           android:id="@+id/id_progreso_sugerencia"
           android:layout_width="match_parent"
    		android:layout_height="150dp"
    		android:layout_alignParentBottom="true"
    		android:background="#ffffff">
           
           <LinearLayout 
                android:id="@+id/id_progreso_texto"
	            android:layout_width="match_parent"
	    		android:layout_height="match_parent"
	    		android:orientation="vertical">
	             <!--<TextView
	                 android:id="@+id/id_progreso_texto1"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:gravity="center"
			        android:layout_marginTop="15dp"
			        android:layout_marginBottom="15dp"
			        android:layout_marginLeft="15dp"
			        android:layout_marginRight="15dp"
			         android:textColor="#0c465e"
			         android:textSize="15sp"
			        android:text="@string/progreso_text1"/>  -->
	             
	             <TextView
	                  android:id="@+id/id_progreso_texto2"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:gravity="center"
			        android:layout_marginTop="15dp"
			        android:layout_marginBottom="15dp"
			        android:layout_marginLeft="15dp"
			        android:layout_marginRight="15dp"
			        android:textSize="15sp"
			         android:textColor="#0c465e"
			        android:text="@string/progreso_text2"/>
                
            </LinearLayout>     
            <LinearLayout 
                android:id="@+id/id_progreso_btns"
	            android:layout_width="match_parent"
	    		android:layout_height="wrap_content"
	    		android:layout_alignParentBottom="true"
	    		android:orientation="horizontal">
	             <TextView
	                 android:id="@+id/id_progreso_ok"
			        android:layout_width="0dp"
			        android:layout_height="wrap_content"
			        android:layout_weight="0.5"
			        android:gravity="center"
			        android:layout_marginTop="15dp"
			        android:layout_marginBottom="15dp"
			        android:layout_marginLeft="15dp"
			        android:layout_marginRight="15dp"
			        android:textSize="18sp"
			        android:textColor="#0c465e"
			        android:text="VALE"/>
	             
	             <TextView
	                 android:id="@+id/id_progreso_ko"
			        android:layout_width="0dp"
			        android:layout_height="wrap_content"
			        android:layout_weight="0.5"
			        android:gravity="center"
			        android:layout_marginTop="15dp"
			        android:layout_marginBottom="15dp"
			        android:layout_marginLeft="15dp"
			        android:layout_marginRight="15dp"
			        android:textSize="18sp"
			         android:textColor="#0c465e"
			        android:text="AHORA NO"/>
                
            </LinearLayout>         
     
     
 		</RelativeLayout>
 		  
</RelativeLayout>