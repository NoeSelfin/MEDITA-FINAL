	        <ToggleButton
		         android:id="@+id/toggleButton1"
		         android:layout_width="80dp"
		         android:layout_height="40dp"  		
		         android:background="@drawable/toggle_bg"
		         style="@style/toggleButton" />
    	</LinearLayout>
    </LinearLayout>
    <View
