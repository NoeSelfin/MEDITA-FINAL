            android:id="@+id/id_regalos_inicio"
	        android:layout_width="wrap_content"
	        android:layout_height="25dp"
	        android:gravity="center"
	        android:textSize="19sp"
	        android:textColor="#0c465e"
	        android:text="REGALOS" />
    
    </LinearLayout>
