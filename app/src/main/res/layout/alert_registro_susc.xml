<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="265dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/alert_bg" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/id_alert_titulo"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="10dp"
            android:textSize="17sp"
            android:gravity="center"
            android:textColor="#0c465e"
            android:text = "¡INSCRÍBETE EN LA COMUNIDAD!"/>
    </LinearLayout>

    <TextView
        android:id="@+id/id_alert_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="15sp"
        android:gravity="left"
        android:textColor="#0c465e"
        android:text = "¿Quieres ser parte de la comunidad de Medita Y Recibir las últimas novedades y ofrecernos tus sugerencias? Déjanos tu correo electrónico."/>

    <EditText
        android:id="@+id/id_alert_editext_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:maxLines="1"
        android:maxLength="100"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Nombre"
        android:textSize="15sp"
        android:textColor="#0c465e"
        android:paddingLeft="10dp"
        android:inputType="textEmailAddress"
        android:background="@drawable/et_border"/>
    <EditText
        android:id="@+id/id_alert_editext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:maxLines="1"
        android:maxLength="100"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="15sp"
        android:textColor="#0c465e"
        android:paddingLeft="10dp"
        android:inputType="textEmailAddress"
        android:background="@drawable/et_border"/>



    <LinearLayout
        android:id="@+id/check_box_and_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/checkBoxCustomized"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:button="@drawable/custom_checkbox" />

        <TextView
            android:id="@+id/checkBoxCustomized_text"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="@string/leido_y_acepto_politica"
            android:button="@drawable/custom_checkbox"
            android:textSize="10dp"
            android:textColor="#0c465e"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_politica"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/info_prot_datos"
        android:gravity="center_horizontal"
        android:layout_margin="10dp"
        android:textSize="12sp"
        android:textColor="#0c465e"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#0c465e"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/id_alert_btn_close"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="27dp"
            android:textSize="19sp"
            android:gravity="center"
            android:textColor="#0c465e"
            android:text = "CERRAR"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/id_alert_btn"
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:layout_weight="1"
            android:textSize="19sp"
            android:gravity="center"
            android:textColor="#0c465e"
            android:text = "ENVIAR"
            android:layout_margin="10dp"/>
    </LinearLayout>

</LinearLayout>