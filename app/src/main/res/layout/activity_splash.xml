<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

      <ImageView
          android:id="@+id/id_splash_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        android:src="@drawable/splash1" />
       <!-- <ImageView
         android:id="@+id/id_splash_img"
        android:layout_width="300dp"
        android:layout_height="300dp"
    	    android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:layout_marginTop="170dp"
        android:gravity="center" /> -->
      <LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	     android:layout_centerHorizontal="true"
	     android:layout_marginTop="170dp"
	    android:gravity="center"
	    android:orientation="vertical">    
		    <TextView
		         android:id="@+id/id_splash_text1"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textColor="#435d76"
		        android:text="@string/splash1"
		        android:textSize="40sp"/>
		    <TextView
		         android:id="@+id/id_splash_text2"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		          android:textColor="#435d76"
		        android:text="@string/splash2"
		        android:layout_marginTop="-20dp"
		        android:textSize="40sp"/>
		    <TextView
		         android:id="@+id/id_splash_text3"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		          android:textColor="#435d76"
		        android:text="@string/splash3"
		        android:layout_marginTop="-20dp"
		        android:textSize="40sp"/>
		    <TextView
		         android:id="@+id/id_splash_text4"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		          android:textColor="#435d76"
		        android:text="@string/splash4"
		        android:layout_marginTop="-20dp"
		        android:textSize="40sp"/>
		    <TextView
		         android:id="@+id/id_splash_text5"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		          android:textColor="#435d76"
		          android:layout_marginTop="-20dp"
		        android:text="@string/splash5"
		        android:textSize="40sp"/>
	</LinearLayout>
</RelativeLayout>
